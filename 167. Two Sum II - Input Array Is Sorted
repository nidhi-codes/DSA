class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        vector<int> ans;
        int len = numbers.size();
        int i=0;
        int j=len-1;
        while(i<j){
            int temp = numbers[i] + numbers[j];
            if(temp == target){
                ans.push_back(i+1);
                ans.push_back(j+1);
                break;
            }
            else if(temp>target){
                j--;
            }
            else{
                i++;
            }
        }
        return ans;
    }
};
